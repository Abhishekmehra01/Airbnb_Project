<% layout("/layouts/boilerplate") %>


    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login on Wanderlust</h1>
        
        <div class="col-6 offset-3">
            <form method="POST" action="/login" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="username" type="text" class="form-control" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" placeholder="password" type="text" class="form-control" required />
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <br>

                <button class="btn btn-primary">Login</button>
                <br><br>
                
                <a href="/signup">Don't have an account? Sign up here!</a>
                <br>


            </form>
            <br>
            <br>
           


        </div>
    </div>
    <script src="/public/js/script.js"></script>